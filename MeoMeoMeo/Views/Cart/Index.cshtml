@model IEnumerable<MeoMeoMeo.Models.ChiTietDH>

@{
    ViewBag.Title = "Giỏ Hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Session["TenDangNhap"] == null)
    {
        Response.Redirect("~/Dang-Nhap");
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
    <link rel="stylesheet" href="~/Content/CartStyle.css">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/Content/Style.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Baloo+Tammudu+2:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" />
</head>
<body>
    <div class="small-container cart-page">
        <table>
            <tr>
                <th></th>
                <th>Sản Phẩm</th>
                <th>Số Lượng</th>
                <th>Thành tiền</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>
            @*<div class="cart-info">*@
            <td>
                <img src="~/IMG SANPHAM/@item.SanPham.Hinh_anh" width="150">
            </td>
            <td>
                <div>
                    <p>
                        Tên sản phẩm: @item.SanPham.TenSP
                    </p>
                    <small>Giá: @item.SanPham.Gia.GetValueOrDefault(0).ToString("N0") VND</small>
                    <br>
                    @using (Html.BeginForm("xoaSP", "Cart"))
                    {

                        <input type="hidden" value="@item.SanPham.MaSP" name="id" />
                        <button type="submit" class="btn">Xóa sản phẩm</button>
                    }
                </div>
            </td>
            <td>


                <input type="hidden" value="@item.SanPham.MaSP" name="productid" />
                <input type="number" class="input-group" value=@item.SL name="soluong" />

            </td>
            <td>
                @((item.SanPham.Gia * item.SL).GetValueOrDefault(0).ToString("N0")) VND
            </td>
            <td>
                @using (Html.BeginForm("xoaSP", "Cart"))
                {

                    <input type="hidden" value="@item.SanPham.MaSP" name="id" />
                    <button type="submit" class="btn">Xóa sản phẩm</button>
                }
            </td>
        </tr>
            }

            @*<div class="total-price">
            <table>
                <tr>
                    <td>Total</td>
                    <td>VND</td>
                </tr>
            </table>
        </div>*@
        </table>
        <p>
            @*@Html.ActionLink("Tiếp tục mua hàng","SanPham","Home",new {@class="button" })*@
            <a href=@Url.Action("SanPham", "Home") class="button">Tiếp tục mua hàng</a>
                <input type="submit" class="btn button bt-dangnhap" value="Cập nhật" />
                <a href=@Url.Action("Home", "SanPham") class="button">Thanh toán</a>
            </p>
    </div>
    </body>

</html>